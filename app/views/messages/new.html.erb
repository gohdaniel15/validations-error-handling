<h1>New Message</h1>

<%= form_for @message, url: messages_path, method: :post do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body, id: :message_body %>
  </div>

  <div class="field">
    <%= form.label :sender %>
    <%= form.text_field :sender, id: :message_sender %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :message_email %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', messages_path %>
