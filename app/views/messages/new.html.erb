<h1>New Message</h1>

<%= form_for @message, url: messages_path, method: :post do |form| %>

  <%= form.label :body %>
  <%= form.text_field :body %>

  <%= form.label :sender %>
  <%= form.text_field :sender %>

  <%= form.label :email %>
  <%= form.text_field :email %>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', messages_path %>
